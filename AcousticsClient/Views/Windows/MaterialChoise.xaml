<Window x:Class="AcousticsClient.Views.Windows.MaterialChoise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcousticsClient.Views.Windows"
        xmlns:fa="http://schemas.fontawesome.com/icons/svg"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:AcousticsClient.ViewModels"
        Title="MaterialChoise" Height="400" Width="300">
    <Window.DataContext>
        <vm:MaterialChoiseViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel  LastChildFill="True" Height="20">
            <Button DockPanel.Dock="Right" Width="20" Height="20">
                <fa:ImageAwesome Icon="Solid_MagnifyingGlass"/>
            </Button>
            <TextBox/>
        </DockPanel>
        <ListView ItemsSource="{Binding Surfaces}">
            
        </ListView>
    </Grid>
</Window>
