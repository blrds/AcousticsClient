<Window x:Class="AcousticsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcousticsClient"
        xmlns:fa="http://schemas.fontawesome.com/icons/svg"
        mc:Ignorable="d"
        Title="{Binding SelectedExperiment.Room.Proportions.X}" Height="450" Width="800"
        xmlns:vm="clr-namespace:AcousticsClient.ViewModels">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Файл" Command="{Binding Click}">
                
            </MenuItem>
            <MenuItem Header="Справка"/>
            <MenuItem Header="О программе"/>
        </Menu>
        <TabControl Grid.Row="1" ItemsSource="{Binding Experiments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedExperiment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate >
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" Name="Column0"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.Resources>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlock1}"/>

                            <Style TargetType="TextBox" BasedOn="{StaticResource TextBox1}">
                                <Setter Property="Width" Value="50"/>
                            </Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Orientation" Value="Horizontal"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                            </Style>
                        </Grid.Resources>
                        <StackPanel Style="{x:Null}" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                
                            </StackPanel.Resources>
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock Text="Комната: "/>
                                <TextBox Text="{Binding Room.Name}" Width="100"/>
                                <Button Background="Transparent" BorderThickness="0" Command="{Binding SearchRoom}">
                                    <fa:ImageAwesome Icon="Solid_MagnifyingGlass" Height="15" Width="20"/>
                                </Button>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Длина комнаты: "/>
                                <TextBox Text="{Binding Room.Proportions.X}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Ширина комнаты: "/>
                                <TextBox Text="{Binding Room.Proportions.Y}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Высота комнаты: "/>
                                <TextBox Text="{Binding Room.Proportions.Z}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" >
                            <DockPanel>
                                <ComboBox DockPanel.Dock="Top" ItemsSource="{Binding Sources}" SelectedItem="{Binding SelectedSource}" Margin="2,5" Height="25" Padding="5,0,5,0"/>
                                <StackPanel Style="{x:Null}" Width="Auto" DockPanel.Dock="Left">
                                    <StackPanel>
                                        <TextBlock Text="X: "/>
                                        <TextBox Text="{Binding SelectedSource.X}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Y: "/>
                                        <TextBox Text="{Binding SelectedSource.Y}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Z: "/>
                                        <TextBox Text="{Binding SelectedSource.Z}"/>
                                    </StackPanel>
                                </StackPanel>
                                <Button DockPanel.Dock="Right" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5,5">
                                    <fa:ImageAwesome Icon="Solid_Check"/>
                                </Button>
                            </DockPanel>
                            <DockPanel>
                                <ComboBox DockPanel.Dock="Top" ItemsSource="{Binding Recievers}" SelectedItem="{Binding SelectedReciever}" Margin="2,5" Height="25" Padding="5,0,5,0"/>
                                <StackPanel Style="{x:Null}" Width="Auto" DockPanel.Dock="Left">
                                    <StackPanel>
                                        <TextBlock Text="X: "/>
                                        <TextBox Text="{Binding SelectedResiever.X}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Y: "/>
                                        <TextBox Text="{Binding SelectedResiever.Y}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Z: "/>
                                        <TextBox Text="{Binding SelectedResiever.Z}"/>
                                    </StackPanel>
                                </StackPanel>
                                <Button DockPanel.Dock="Right" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5,5">
                                    <fa:ImageAwesome Icon="Solid_Check"/>
                                </Button>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        <ProgressBar Grid.Row="2" Height="15"/>
    </Grid>
</Window>
